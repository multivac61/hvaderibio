  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm scrape && vite build",
    "build:cloudflare": "pnpm scrape && ADAPTER=cloudflare vite build",
    "build:github": "pnpm scrape && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "scrape": "svelte-kit sync && tsx src/scrape.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.38.0",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
