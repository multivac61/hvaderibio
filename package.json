    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0",
    "zod": "^4.1.11"
