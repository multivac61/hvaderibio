    "lint": "prettier --check . && eslint .",
    "scrape": "svelte-kit sync && tsx src/scrape.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/js": "^9.36.0",
    "@sveltejs/adapter-cloudflare": "^7.2.3",
